<%= form_with model: @transaction do |form| %>
    <div>
        <%= form.label :product_description %><br>
        <% options = options_from_collection_for_select(@items, 'product_description', 'product_description') %>
        <%= form.select :product_description,  options %>
        <% @transaction.errors.full_messages_for(:product_description).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.label :quantity %><br>
        <%= form.number_field :quantity %><br>
        <% @transaction.errors.full_messages_for(:quantity).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.label :cost %><br>
        <%= form.number_field :cost %><br>
        <% @transaction.errors.full_messages_for(:cost).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.label :customer_name %><br>
        <% options = options_from_collection_for_select(@customers, 'name', 'name') %>
        <%= form.select :customer_name,  options %>
        <% @transaction.errors.full_messages_for(:customer_name).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>