<div class="body-container">
    <div class="back-container">
        <%= link_to "â—„ Back", "/customers" %>
    </div>
    <%= link_to "Edit Customer", edit_customer_path(@customer) %>
    <%= link_to "Delete Customer", customer_path(@customer),
                    method: :delete,
                    data: { confirm: "Are you sure?" } %>
    <h1><%= @customer.name %>'s Information</h1>

    <div class="account-container">

        <label>Name</label>
        <input type="text" value='<%= @customer.name %>' disabled>

