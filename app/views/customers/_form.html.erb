<%= form_with model: @customer do |form| %>
    <div>
        <%= form.label :name %><br>
        <%= form.text_field :name %>
        <% @customer.errors.full_messages_for(:name).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.label :contact_number %><br>
        <%= form.text_field :contact_number %><br>
        <% @customer.errors.full_messages_for(:name).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.label :address %><br>
        <%= form.text_field :address %><br>
        <% @customer.errors.full_messages_for(:address).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>