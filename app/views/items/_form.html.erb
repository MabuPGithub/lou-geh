<%= form_with model: @item do |form| %>
    <div>
        <%= form.label :product_description %><br>
        <%= form.text_field :product_description %>
        <% @item.errors.full_messages_for(:product_description).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.label :quantity %><br>
        <%= form.text_field :quantity %><br>
        <% @item.errors.full_messages_for(:quantity).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.label :cost %><br>
        <%= form.text_field :cost %><br>
        <% @item.errors.full_messages_for(:cost).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.label :delivered_by %><br>
        <% options = options_from_collection_for_select(@supplier, 'id', 'name') %>
        <%= form.select :delivered_by,  options %>
        <% @item.errors.full_messages_for(:delivered_by).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>